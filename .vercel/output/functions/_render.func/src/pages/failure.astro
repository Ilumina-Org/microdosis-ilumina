---
import Layout from "../layouts/Layout.astro";

const { searchParams } = Astro.url;
const paymentId = searchParams.get("payment_id") ?? "N/A";
const status = searchParams.get("status") ?? "N/A";
const merchantOrderId = searchParams.get("merchant_order_id") ?? "N/A";
---

<Layout title="Payment Failed">
    <main class="container">
        <h1 class="title">Payment Failed</h1>
        <div class="card">
            <p class="message">
                Lo sentimos, pero no pudimos procesar tu pago. Por favor,
                intenta nuevamente o contacta al soporte si el problema
                persiste.
            </p>
            <ul class="details">
                <li>Payment ID: {paymentId}</li>
                <li>Status: {status}</li>
                <li>Merchant Order ID: {merchantOrderId}</li>
            </ul>
            <a href="/" class="button primary">Return to Home</a>
            <a href="/contact" class="button secondary">Contact Support</a>
        </div>
    </main>
</Layout>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .title {
        font-size: 2rem;
        font-weight: bold;
        color: #e3342f;
        margin-bottom: 1.5rem;
    }

    .card {
        background: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        padding: 2rem;
    }

    .message {
        margin-bottom: 1rem;
    }

    .details {
        list-style-type: disc;
        padding-left: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .button {
        display: inline-block;
        padding: 0.5rem 1rem;
        font-weight: bold;
        border-radius: 4px;
        text-decoration: none;
        margin-right: 0.5rem;
    }

    .button.primary {
        background-color: #3490dc;
        color: white;
    }

    .button.primary:hover {
        background-color: #2779bd;
    }

    .button.secondary {
        background-color: #6c757d;
        color: white;
    }

    .button.secondary:hover {
        background-color: #5a6268;
    }
</style>
