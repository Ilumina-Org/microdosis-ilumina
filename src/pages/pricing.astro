---
import Layout from "../layouts/Layout.astro";
import ProductContainer from "../components/pricing/product-container.tsx";
import { getStock } from "../utils/stock";

const stockData = await getStock();
const initialStock = stockData["package-1"]?.disponible ?? 0;
---

<Layout>
    <section class="pricing-section">
        <div class="pricing-container">
            <h1>Paquetes de Microdosis</h1>
            <div class="pricing-cards">
                <ProductContainer
                    client:load
                    imageUrl="/images/package-1.jpg"
                    productTitle="1 Mes de Suministro"
                    productDetail="Envío estándar gratuito"
                    productPrice="$160.00"
                    productDeal="Ahorra 67%"
                    tier={0}
                    purchaseType="one-time"
                    initialStock={initialStock}
                />
            </div>
        </div>
    </section>
</Layout>

<style is:global>
    .pricing-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }
    .pricing-cards {
        display: flex;
        justify-content: center;
    }
</style>
