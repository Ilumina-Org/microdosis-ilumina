<script>
    document.addEventListener("DOMContentLoaded", () => {
        const paymentOptions =
            document.querySelectorAll<HTMLElement>(".payment-option");

        paymentOptions.forEach((option) => {
            const header = option.querySelector<HTMLElement>(
                ".payment-option-header",
            );
            if (!header) return;

            header.addEventListener("click", () => {
                const isActive = option.classList.contains("active");

                paymentOptions.forEach((opt) => {
                    opt.classList.remove("active");

                    const content = opt.querySelector<HTMLElement>(
                        ".payment-option-content",
                    );
                    if (content) content.style.maxHeight = "0";
                });

                if (!isActive) {
                    option.classList.add("active");

                    const content = option.querySelector<HTMLElement>(
                        ".payment-option-content",
                    );
                    if (content)
                        content.style.maxHeight = `${content.scrollHeight}px`;
                }
            });
        });
    });
</script>

<style>
    .payment-section {
        padding: 1.5rem;
        border-bottom: 1px solid #eaeaea;
    }

    .payment-section h2 {
        font-size: 1.3rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .payment-options {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .payment-option {
        border-radius: 12px;
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .payment-option.active {
        box-shadow: 0 4px 16px rgba(80, 184, 154, 0.2);
        border: 2px solid #50b89a;
    }

    .payment-option-header {
        padding: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        cursor: pointer;
        position: relative;
    }

    .payment-icon {
        font-size: 1.8rem;
        width: 40px;
        text-align: center;
    }

    .payment-title {
        font-weight: 600;
        color: #333;
        font-size: 1rem;
    }

    .toggle-icon {
        margin-left: auto;
        transition: transform 0.3s ease;
        color: #666;
    }

    .payment-option.active .toggle-icon {
        transform: rotate(180deg);
        color: #50b89a;
    }

    .payment-option-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out;
        padding: 0 1rem;
    }

    .payment-option.active .payment-option-content {
        max-height: 500px;
        padding: 1rem;
    }

    .coming-soon {
        text-align: center;
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 8px;
        color: #666;
        font-style: italic;
    }

    .mercado-pago-details {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .payment-methods-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        text-align: center;
    }

    .method-icon {
        font-size: 2rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .security-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: center;
        color: #666;
        font-size: 0.9rem;
    }

    .bank-transfer-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .bank-info-item {
        display: flex;
        justify-content: space-between;
        padding: 0.8rem 0;
        border-bottom: 1px solid #eee;
    }

    .info-label {
        color: #666;
    }

    .info-value {
        font-weight: 500;
        color: #333;
    }

    .highlight {
        color: #50b89a;
        font-weight: 600;
    }

    .buy-button,
    .contact-button {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        color: #fff;
    }

    .buy-button {
        background: #50b89a;
    }

    .buy-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(80, 184, 154, 0.3);
    }

    .contact-button {
        background: #4a90e2;
    }

    .contact-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3);
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .payment-option.active .payment-option-content {
        animation: slideDown 0.3s ease-out;
    }
</style>
